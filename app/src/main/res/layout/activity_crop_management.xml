<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CropManagementActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/action_bar"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:queryHint="Search for items..." />

    <CalendarView
        android:layout_gravity="center"
        android:firstDayOfWeek="2"
        android:minDate="11/28/2023"
        android:id="@+id/simpleCalendarView"
        android:layout_width="400dp"
        android:layout_height="300dp" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="3"
            android:text="Events"/>

        <TextView
            android:background="@drawable/rounded_border"
            android:backgroundTint="#B1B0B0"
            android:id="@+id/addEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Add event"
            android:layout_weight="0.2"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
       android:backgroundTint="#E3DEDE"
       android:background="@drawable/rounded_border"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="2dp"
       android:layout_margin="2dp">

       <ImageView
           android:layout_width="140dp"
           android:layout_height="93dp"
           android:src="@drawable/field" />

       <LinearLayout
           android:layout_gravity="center"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Harvesting of corn crop in our khet"
               android:textSize="15dp"
               android:textStyle="bold"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Lorem ipsum dolor sit amet consectetur."
               android:textSize="15dp"/>

           <TextView
               android:textColor="@color/ic_launcher_background"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Date : 09-April-2023 to 30-april-2023"
               android:textSize="15dp"/>

       </LinearLayout>

   </LinearLayout>

    <LinearLayout
        android:backgroundTint="#E3DEDE"
        android:background="@drawable/rounded_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_margin="2dp">

        <ImageView
            android:src="@drawable/planting"
            android:layout_width="140dp"
            android:layout_height="90dp"/>

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harvesting of corn crop in our khet"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet consectetur."
                android:textSize="15dp"/>

            <TextView
                android:textColor="@color/ic_launcher_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date : 09-April-2023 to 30-april-2023"
                android:textSize="15dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:backgroundTint="#E3DEDE"
        android:background="@drawable/rounded_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_margin="2dp">

        <ImageView
            android:src="@drawable/crop"
            android:layout_width="140dp"
            android:layout_height="90dp"/>

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harvesting of corn crop in our khet"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet consectetur."
                android:textSize="15dp"/>

            <TextView
                android:textColor="@color/ic_launcher_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date : 09-April-2023 to 30-april-2023"
                android:textSize="15dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>